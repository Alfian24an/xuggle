<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <contextName>audiotranscoder</contextName>

  <jmxConfigurator contextName="audiotranscoder" />

  <appender name="AUDIOTX" class="ch.qos.logback.core.FileAppender">
    <File>log/audiotranscoder.log</File>
    <Append>false</Append>
    <Encoding>UTF-8</Encoding>
    <BufferedIO>false</BufferedIO>
    <ImmediateFlush>true</ImmediateFlush>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %date [%thread] %-5level %logger{35} - %msg%n
      </Pattern>
    </layout>
  </appender>
  <root>
    <appender-ref ref="AUDIOTX" />
  </root>	
  <logger name="com.xuggle">
    <level value="DEBUG" />
  </logger>		
</configuration>
